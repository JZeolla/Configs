# Set scrollback
defscrollback 20000

# Caption the screen sessions, and keep track of the running containers
caption always "%{= kW}%-w%{= Bw}%n %t%{-}%+w %-= %{= kW} %-25= %`"
backtick 0 5 5 zsh -c 'echo $(( $(docker ps | wc -l) - 1  )) containers running'

# Allow bold
attrcolor b ".I"

# Set background color
defbce "on"

# Set the escape character to Ctrl+j
escape ^Jj

# Set an initial screen session named "default"
screen -t "default" 1

# Turn off the startup message
startup_message off

# Enable alternate screen
altscreen on
