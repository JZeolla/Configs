# Set scrollback
defscrollback 20000

# Caption the screen sessions, and keep track of the running containers
caption always "%{gk} %S    %{= kW}%-w%{= Bw}%n %t%{-}%+w %-= %{= kW} %-25= %`"
backtick 0 5 15 zsh -c 'echo $(( $(docker ps | wc -l) - 1  )) containers, $(( $(vmrun list | head -1 | awk "{print \$NF}") + $(VBoxManage list runningvms | wc -l | awk "{print \$NF}") )) VMs up'

# Allow bold
attrcolor b ".I"

# Set background color
defbce "on"

# Set the escape character to Ctrl+j
escape ^Jj

# Set an initial screen session named "zsh"
screen -t "zsh" 0

# Turn off the startup message
startup_message off

# Enable alternate screen
altscreen on
